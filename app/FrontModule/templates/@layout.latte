<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="robots" content="noindex,follow">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>Knihovna Hradec Králové</title>

		<!-- CSS -->
		<link href="{$basePath}/css/styles.css" rel="stylesheet">
		<link href="{$basePath}/css/responsive-slider.css" rel="stylesheet">

		<!-- Favicon -->
		<link rel="shortcut icon" href="{$basePath}/favicon.ico">

		<!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
		  <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
		<![endif]-->
	</head>
        <body>
		{snippet flashes}
			{foreach $flashes as $flash}
				<div class="alert alert-{$flash->type} alert-dismissible" role="alert">
					<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
					<div class="msg">{$flash->message}</div> 
				</div> 
			{/foreach}
		{/snippet}
		{include 'modals.latte'}

		<div class="wrapper">
			{include 'header.latte'}
			<section>
				<div class="slider">
					<div class="container">
						<img src="{$basePath}/images/data/logo/logo-big.png" alt="logo-big" class="hidden-xs" />
						{form searchForm}
							<div class="row">
								<div class="col-md-9">
									{input search}
								</div>
								<div class="col-md-3">
									{input submit}
								</div>
								<div class="clear"></div>
							</div>
						{/form searchForm}
					</div>
				</div>
			</section>
			{include #content}
			<div class="push"></div>
		</div>
		{include 'footer.latte'}

		<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
		<script type="text/javascript" src="{$basePath}/js/nette.ajax.js"></script>
		<script type="text/javascript" src="{$basePath}/js/bootstrap.min.js"></script>
                <script type="text/javascript" src="{$basePath}/js/live-form-validation.js"></script>
		<script type="text/javascript" src="{$basePath}/js/responsive-slider.js"></script>
                <script type="text/javascript" src="{$basePath}/js/main.js"></script>


	</body>
</html>
